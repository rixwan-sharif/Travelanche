<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#bd1c7c71">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="#1c7c71"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

<Button
    android:layout_width="240dp"
    android:layout_height="60dp"
    android:layout_marginTop="0dp"
    android:background="@drawable/share_ride_back"
    android:text="Share Your Ride"
    android:textColor="#1c7c71"
    android:paddingLeft="50dp"
    android:textAllCaps="false"
    android:textSize="@dimen/s17"
    android:id="@+id/share_ride_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="26/11/2014"
            android:id="@+id/accepted_trip_bid_date_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="03:00 pm"
            android:id="@+id/accepted_trip_bid_time_text"
            android:layout_below="@+id/accepted_trip_bid_date_text"
            android:layout_alignEnd="@+id/accepted_trip_bid_date_text"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView2"
            android:layout_below="@+id/accepted_trip_bid_time_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/person" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/accepted_trip_vehicle_image"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignEnd="@+id/accepted_trip_bid_time_text"
            android:layout_marginEnd="46dp"
            android:background="@drawable/person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gujranwala"
            android:id="@+id/accepted_trip_destination_text"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="15dp"
            android:visibility="visible"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="GLI 2009"
            android:id="@+id/accepted_trip_vehicle_text"
            android:layout_alignBottom="@+id/accepted_trip_destination_text"
            android:layout_alignStart="@+id/accepted_trip_vehicle_image"
            android:visibility="visible"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Details"
            android:id="@+id/accepted_trip_trip_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView2"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_shape_white"
            android:textAllCaps="false"
            android:textColor="#1c7c71" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bid Details"
            android:id="@+id/accepted_trip_bid_btn"
            android:layout_alignBottom="@+id/accepted_trip_trip_btn"
            android:layout_alignStart="@+id/accepted_trip_vehicle_image"
            android:background="@drawable/btn_shape_white"
            android:textAllCaps="false"
            android:textColor="#1c7c71" />

    </RelativeLayout>
</RelativeLayout>

