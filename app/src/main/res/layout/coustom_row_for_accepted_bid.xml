<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signin_btn_shape"
        android:id="@+id/relativeLayout2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Trip Details"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Destination"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Naran"
        android:id="@+id/accepted_bid_dest_text"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vehicle"
        android:id="@+id/vehicle_lable"
        android:layout_below="@+id/accepted_bid_dest_text"
        android:layout_alignLeft="@+id/accepted_bid_dest_text"
        android:layout_alignStart="@+id/accepted_bid_dest_text"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/accepted_bid_trip_vehicle_text"
        android:layout_below="@+id/vehicle_lable"
        android:layout_alignLeft="@+id/vehicle_lable"
        android:layout_alignStart="@+id/vehicle_lable"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:text="4-seater" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Driver / AC"
        android:id="@+id/accepted_trip_vehicle_text"
        android:layout_below="@+id/accepted_bid_trip_vehicle_text"
        android:layout_alignLeft="@+id/accepted_bid_trip_vehicle_text"
        android:layout_alignStart="@+id/accepted_bid_trip_vehicle_text"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Yes / Yes"
            android:id="@+id/accepted_bid_driver_ac_text"
            android:layout_below="@+id/accepted_trip_vehicle_text"
            android:layout_alignLeft="@+id/accepted_trip_vehicle_text"
            android:layout_alignStart="@+id/accepted_trip_vehicle_text"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="12sp" />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pickup Time"
        android:id="@+id/textView14"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/accepted_bid_driver_ac_text"
        android:layout_alignLeft="@+id/accepted_bid_driver_ac_text"
        android:layout_alignStart="@+id/accepted_bid_driver_ac_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Time"
        android:id="@+id/accepted_bid_pick_time_text"
        android:layout_below="@+id/textView14"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="#ffffff" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Drop Time"
            android:id="@+id/textView188"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_below="@+id/accepted_bid_pick_time_text"
            android:layout_alignLeft="@+id/accepted_bid_pick_time_text"
            android:layout_alignStart="@+id/accepted_bid_pick_time_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time"
            android:id="@+id/accepted_bid_drop_time_text"
            android:layout_below="@+id/textView188"
            android:layout_alignLeft="@+id/textView188"
            android:layout_alignStart="@+id/textView188"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pick up Location"
        android:id="@+id/textView18"
        android:layout_below="@+id/accepted_bid_drop_time_text"
        android:layout_alignLeft="@+id/accepted_bid_drop_time_text"
        android:layout_alignStart="@+id/accepted_bid_drop_time_text"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Muslim Town"
        android:id="@+id/accepted_bid_pick_loc_text"
        android:layout_below="@+id/textView18"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date"
        android:id="@+id/textView21"
        android:layout_below="@+id/accepted_bid_pick_loc_text"
        android:layout_alignLeft="@+id/accepted_bid_pick_loc_text"
        android:layout_alignStart="@+id/accepted_bid_pick_loc_text"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="22/7/2017"
        android:id="@+id/accepted_bid_date_from_text"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="to"
        android:id="@+id/textView27"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/accepted_bid_date_from_text"
        android:layout_alignBottom="@+id/accepted_bid_date_from_text"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:textColor="#ffffff"
        android:layout_marginLeft="-1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="26/7/2017"
        android:id="@+id/accepted_bid_date_to_text"
        android:layout_alignTop="@+id/textView27"
        android:layout_toRightOf="@+id/textView27"
        android:layout_toEndOf="@+id/textView27"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"
        android:textColor="#ffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signin_btn_shape"
            android:layout_below="@+id/accepted_bid_date_to_text"

            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bid Details"
                android:id="@+id/textView33"

                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Rate/day (Rs.)"
                android:id="@+id/textView34"
                android:layout_below="@id/textView33"
                android:layout_alignLeft="@+id/textView33"
                android:layout_alignStart="@+id/textView33"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="5000"
                android:id="@+id/accepted_bid_rate_text"
                android:layout_below="@+id/textView34"
                android:layout_alignLeft="@+id/textView34"
                android:layout_alignStart="@+id/textView34"
                android:layout_marginTop="7dp"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_marginBottom="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Total Fare (Rs.)"
                android:id="@+id/textView38"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/textView34"
                android:layout_toEndOf="@+id/textView34"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@+id/textView34" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Bids"
                android:id="@+id/textView36"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/textView38"
                android:layout_toRightOf="@+id/textView38"
                android:layout_toEndOf="@+id/textView38"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="5000"
                android:id="@+id/accepted_bid_total_fare_txt"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/textView38"
                android:layout_alignLeft="@+id/textView38"
                android:layout_alignStart="@+id/textView38"
                android:layout_marginTop="7dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="5"
                android:id="@+id/accepted_bid_bids_text"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/textView36"
                android:layout_alignLeft="@+id/textView36"
                android:layout_alignStart="@+id/textView36"
                android:layout_marginTop="7dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/accepted_bid_vehicle_image"
                android:background="#ffffff"
                android:layout_below="@+id/accepted_bid_total_fare_txt"
                android:layout_alignLeft="@+id/accepted_bid_rate_text"
                android:layout_alignStart="@+id/accepted_bid_rate_text"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Vehicle Details"
                android:id="@+id/textView8"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/accepted_bid_vehicle_image"
                android:layout_toRightOf="@+id/textView34"
                android:layout_toEndOf="@+id/textView34"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Civic 2013 Oreal"
                android:id="@+id/accepted_bid_vehicle_detail_text"
                android:textColor="#ffffff"
                android:lines="3"
                android:paddingRight="10dp"
                android:maxLength="60"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:textSize="12sp"
                android:layout_marginTop="5dp" />

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Company Details"
            android:id="@+id/textView29"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="35dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Company Name"
            android:id="@+id/accepted_bid_comp_name_text"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView29"
            android:layout_alignLeft="@+id/textView29"
            android:layout_alignStart="@+id/textView29"
            android:layout_marginTop="10dp"
            android:lines="3"
            android:paddingRight="10dp"
            android:maxLength="60" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Contact"
            android:id="@+id/accepted_bid_comp_number_text"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_below="@+id/accepted_bid_comp_name_text"
            android:layout_alignLeft="@+id/accepted_bid_comp_name_text"
            android:layout_alignStart="@+id/accepted_bid_comp_name_text"
            android:layout_marginTop="5dp"
            android:maxLength="15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Company Address"
            android:id="@+id/accepted_bid_comp_address_text"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_below="@+id/accepted_bid_comp_number_text"
            android:layout_alignLeft="@+id/accepted_bid_comp_number_text"
            android:layout_alignStart="@+id/accepted_bid_comp_number_text"
            android:layout_marginTop="5dp"
            android:lines="3"
            android:maxLength="60" />

    </RelativeLayout>



</RelativeLayout>

