<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.example.rixwansharif.travelanche.SettingActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e7e7e7">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="40dp"
                android:background="@drawable/person"
                android:layout_marginLeft="95dp"
                android:layout_width="@dimen/activity_main__page_sign_up_btn_width"
                android:layout_height="@dimen/activity_main__page_sign_up_btn_width"
                android:id="@+id/setting_profile_pic" />

            <Button
                android:layout_width="@dimen/activity_setting_setting_camera_btn_width"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="220dp"
                android:layout_height="@dimen/activity_setting_setting_camera_btn_height"
                android:id="@+id/setting_camera_btn"
                android:background="@drawable/cameraee"
                android:layout_gravity="center_vertical"></Button>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_setting_relativeLayout_height"
                android:layout_below="@+id/setting_camera_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:background="@drawable/upreee2"
                android:id="@+id/relativeLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/setting_name_txt"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="14dp"
                    android:textColor="#000000"
                    android:textSize="@dimen/s18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:id="@+id/setting_pass_txt"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/setting_name_txt"
                    android:layout_alignStart="@+id/setting_name_txt"
                    android:layout_marginBottom="14dp"
                    android:textColor="#000000"
                    android:textSize="@dimen/s18" />

                <ImageButton
                    android:layout_width="@dimen/activity_login_new_cnfrm_pass_text_height"
                    android:layout_height="@dimen/activity_login_new_cnfrm_pass_text_height"
                    android:id="@+id/setting_name_btn"
                    android:src="@mipmap/ic_mode_editp"
                    android:background="#ffffff"

                    android:layout_marginTop="4dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageButton
                    android:layout_width="@dimen/activity_login_new_cnfrm_pass_text_height"
                    android:layout_height="@dimen/activity_login_new_cnfrm_pass_text_height"
                    android:id="@+id/setting_pass_btn"
                    android:src="@mipmap/ic_mode_editp"
                    android:background="#ffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/setting_name_btn"
                    android:layout_alignEnd="@+id/setting_name_btn"
                    android:layout_marginBottom="2dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_setting_relativeLayout_height_"
                android:background="@drawable/loweree2"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About and phone number"
                    android:id="@+id/textView9"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#01aa95"
                    android:textSize="@dimen/s15" />

                <TextView
                    android:textColor="#000000"
                    android:text="Phone number"
                    android:textSize="@dimen/s18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_phone_txt"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="23dp"
                    android:paddingLeft="20dp">
                </TextView>

                <TextView
                    android:textColor="#000000"
                    android:text="CNIC"
                    android:textSize="@dimen/s18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_city_txt"
                    android:paddingLeft="20dp"
                    android:layout_below="@+id/setting_phone_txt"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="28dp" />

                <ImageButton
                    android:layout_width="@dimen/activity_setting_setting_city_btn_width_"
                    android:layout_height="@dimen/activity_setting_setting_city_btn_height_"
                    android:id="@+id/setting_city_btn"
                    android:src="@mipmap/ic_mode_editp"
                    android:background="#ffffff"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="13dp" />
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
