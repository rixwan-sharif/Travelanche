<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08333d">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#01AA97"
            android:focusable="true" android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="@dimen/activity_login_carlogo_width"
                android:layout_height="@dimen/activity_login_carlogo_height"
                android:layout_marginTop="@dimen/m85"

                android:background="@drawable/register_logo"
                android:id="@+id/linearLayout"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_login_new_cnfrm_pass_text_height"

                android:paddingLeft="@dimen/p10"


                android:ems="10"
                android:id="@+id/new_pass_text"
                android:inputType="textPassword"
                android:background="@drawable/sign_edit_text_shape"
                android:hint="New Password"
                android:textColorHint="#a6083d29"
                android:textColor="#000000"
                android:paddingRight="@dimen/p10"
                android:singleLine="true"

                android:layout_marginTop="@dimen/m280"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:textSize="@dimen/p16"
                android:maxLength="15" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_login_new_cnfrm_pass_text_height"
                android:paddingLeft="@dimen/p10"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/new_cnfrm_pass_text"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/new_pass_text"
                android:layout_marginTop="@dimen/m340"

                android:background="@drawable/sign_edit_text_shape"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:hint="Confirm New Password"
                android:textColorHint="#a6083d29"
                android:textColor="#000000"
                android:paddingRight="@dimen/p10"
                android:singleLine="true"

                android:textSize="@dimen/p16"
                android:maxLength="15" />



            <Button
                android:layout_width="@dimen/activity_main__page_sign_up_btn_width"
                android:layout_height="wrap_content"
                android:text="Save Password"
                android:id="@+id/set_new_pass_btn"
                android:background="@drawable/signin_btn_shape"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="@dimen/p16"
                android:layout_marginTop="@dimen/m20"
                android:layout_below="@+id/new_cnfrm_pass_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/m60" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Your New Password"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textSize="@dimen/p16"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/new_pass_text"
                android:layout_alignStart="@+id/new_pass_text" />


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>