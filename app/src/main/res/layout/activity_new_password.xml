<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08333d">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#01AA97"
            android:focusable="true" android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="78dp"
                android:layout_marginTop="85dp"

                android:background="@drawable/register_logo"
                android:id="@+id/linearLayout"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:paddingLeft="10dp"


                android:ems="10"
                android:id="@+id/new_pass_text"
                android:inputType="textPassword"
                android:background="@drawable/sign_edit_text_shape"
                android:hint="New Password"
                android:textColorHint="#a6083d29"
                android:textColor="#000000"
                android:paddingRight="10dp"
                android:singleLine="true"

                android:layout_marginTop="285dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16dp"
                android:maxLength="15" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/new_cnfrm_pass_text"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/new_pass_text"
                android:layout_marginTop="347dp"
                android:background="@drawable/sign_edit_text_shape"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Confirm New Password"
                android:textColorHint="#a6083d29"
                android:textColor="#000000"
                android:paddingRight="10dp"
                android:singleLine="true"

                android:textSize="16dp"
                android:maxLength="15" />



            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Save Password"
                android:id="@+id/set_new_pass_btn"
                android:background="@drawable/signin_btn_shape"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="16.5dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/new_cnfrm_pass_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Your New Password"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/new_pass_text"
                android:layout_alignStart="@+id/new_pass_text" />


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>