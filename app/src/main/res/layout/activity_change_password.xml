<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:background="#01AA97">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/CP_curren_pass"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_lock_white"
        android:hint="Current Password"
        android:selectAllOnFocus="false"
        android:textColorHint="#fcfdff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"
        android:paddingRight="10dp"
        android:maxLength="15" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/CP_new_pass"
        android:layout_marginTop="10dp"

        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_lock_white"
        android:hint="New Password"
        android:textColorHint="#fcfdff"
        android:layout_below="@+id/CP_curren_pass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/CP_curren_pass"
        android:layout_alignEnd="@+id/CP_curren_pass"
        android:textColor="#ffffff"
        android:paddingRight="10dp"
        android:maxLength="15" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/CP_confirm_new_pass"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_lock_white"
        android:hint="Confirm New Password"
        android:textColorHint="#fcfdff"
        android:layout_below="@+id/CP_new_pass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:paddingRight="10dp"
        android:maxLength="15" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:id="@+id/CP_change_btn"
        android:background="@drawable/signin_btn_shape"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/CP_confirm_new_pass" />

</RelativeLayout>
