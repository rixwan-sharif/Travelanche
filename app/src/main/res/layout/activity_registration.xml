<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01AA97">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#01AA97">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/p15"
            android:focusable="true" android:focusableInTouchMode="true"
            >
            <LinearLayout
                android:layout_width="@dimen/w200"
                android:layout_height="@dimen/h240"
                android:layout_marginTop="@dimen/m50"

                android:background="@drawable/register_logo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/h50"

                android:paddingLeft="@dimen/p10"


                android:ems="10"
                android:id="@+id/first_name"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/w200"
                android:background="@drawable/sign_edit_text_shape"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:hint="First Name"
                android:textColorHint="#a6083d29"
                android:textColor="#000000"
                android:paddingRight="@dimen/p15"
                android:singleLine="true"
                android:textSize="@dimen/s16"
                android:maxLength="15"
                android:gravity="left|center" />


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="@dimen/h50"
                android:paddingLeft="@dimen/p10"

                android:ems="10"
                android:id="@+id/last_name"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/first_name"
                android:layout_marginTop="257dp"
                android:background="@drawable/sign_edit_text_shape"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:hint="Last Name"
                android:textColorHint="#a6083d29"
                android:textColor="#000000"
                android:paddingRight="@dimen/p15"
                android:singleLine="true"
                android:textSize="@dimen/s16"
                android:maxLength="15"
                android:gravity="left|center" />


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="@dimen/h50"
                android:paddingLeft="@dimen/p10"

                android:ems="10"
                android:id="@+id/signup_phone_number"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/last_name"
                android:layout_marginTop="@dimen/m315"
                android:background="@drawable/sign_edit_text_shape"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:hint="Phone Number"
                android:textColorHint="#a6083d29"
                android:textColor="#000000"
                android:maxLength="12"
                android:phoneNumber="true"
                android:paddingRight="@dimen/p15"
                android:singleLine="true"
                android:textSize="@dimen/s16"
                android:gravity="left|center" />


            <Spinner android:layout_width="@dimen/w360"
                android:layout_height="@dimen/h50"

                android:id="@+id/spCities"

                android:layout_marginTop="@dimen/m10"
                android:layout_marginRight="@dimen/m20"
                android:dropDownWidth="fill_parent"


                android:background="@drawable/sign_edit_text_shape"
                android:layout_marginLeft="@dimen/m20"
                android:layout_below="@+id/signup_phone_number"
                android:prompt="@string/city_prompt"
                android:entries="@array/destination_city_array"
                android:paddingRight="@dimen/p10">

            </Spinner>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="@dimen/h50"
                android:paddingLeft="@dimen/p10"
                android:inputType="textPassword"


                android:ems="10"
                android:id="@+id/signup_password"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/spCities"
                android:layout_marginTop="437dp"
                android:background="@drawable/sign_edit_text_shape"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:hint="Password"

                android:textColorHint="#a6083d29"
                android:textColor="#000000"
                android:paddingRight="@dimen/p15"
                android:maxLength="15"
                android:singleLine="true"
                android:textSize="@dimen/s16"
                android:gravity="left|center" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="@dimen/h50"
                android:paddingLeft="@dimen/p10"
                android:ems="10"
                android:id="@+id/signup_confirm_password"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/signup_password"
                android:layout_marginTop="497dp"
                android:background="@drawable/sign_edit_text_shape"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:hint="Confirm Password"
                android:textColorHint="#a6083d29"
                android:textColor="#000000"
                android:paddingRight="@dimen/p15"
                android:inputType="textPassword"
                android:maxLength="15"
                android:singleLine="true"
                android:textSize="@dimen/s16"
                android:gravity="left|center" />


            <Button
                android:layout_marginLeft="@dimen/m20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/signup_btn"
                android:layout_below="@+id/signup_confirm_password"
                android:layout_marginTop="@dimen/m57"
                android:background="@drawable/btn_shape_white"
                android:textColor="#01AA97"
                android:textStyle="bold"
                android:textSize="@dimen/s20"
                android:layout_marginRight="@dimen/m20" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>