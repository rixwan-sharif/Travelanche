<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rixwansharif.travelanche.ContactUsActivity">

    <com.google.android.gms.maps.MapView android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="240dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contact Address"
        android:id="@+id/bid_rate_per_day"
        android:layout_below="@+id/mapview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="#01AA97" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="G.T. Rd, Lahore 54890"
        android:id="@+id/bid_vehiclee"
        android:layout_below="@+id/bid_rate_per_day"
        android:layout_alignLeft="@+id/bid_rate_per_day"
        android:layout_alignStart="@+id/bid_rate_per_day"
        android:layout_marginTop="25dp"
        android:textColor="#808080" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="University of Engineering and Technology, Lahore"
        android:id="@+id/bid_total_fare"
        android:layout_below="@+id/bid_vehiclee"
        android:layout_alignLeft="@+id/bid_vehiclee"
        android:layout_alignStart="@+id/bid_vehiclee"
        android:layout_marginTop="15dp"
        android:textColor="#808080"
        android:paddingRight="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Punjab, Pakistan"
        android:id="@+id/textView10"
        android:layout_below="@+id/bid_total_fare"
        android:layout_alignLeft="@+id/bid_total_fare"
        android:layout_alignStart="@+id/bid_total_fare"
        android:layout_marginTop="15dp"
        android:textColor="#808080" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="info@travelanche.com"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:textColor="#808080"
        android:layout_marginTop="15dp" />

</RelativeLayout>
