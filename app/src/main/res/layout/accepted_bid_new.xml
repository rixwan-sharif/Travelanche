<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#bd1c7c71">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#1c7c71"
        android:visibility="visible"
        android:id="@+id/accepted_relative_layout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Trips"
            android:id="@+id/textView2"
            android:layout_marginStart="80dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bids"
            android:id="@+id/textView3"
            android:layout_marginEnd="80dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#1c7c71"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/accepted_relative_layout"
        android:layout_marginRight="10dp">

<Button
    android:layout_width="260dp"
    android:layout_height="70dp"
    android:layout_marginLeft="-25dp"
    android:layout_marginTop="0dp"
    android:background="@drawable/share_ride_back"

    android:text="Share Your Ride"
    android:textColor="#1c7c71"
    android:paddingLeft="50dp"
    android:textAllCaps="false"
    android:textSize="@dimen/s17"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="26/11/2014"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="03:00 pm"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_alignEnd="@+id/textView6"
            android:textColor="#ffffff" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView2"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="62dp"
            android:background="#ffffff" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView3"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignEnd="@+id/textView7"
            android:layout_marginEnd="46dp"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gujranwala"
            android:id="@+id/textView10"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="GLI 2009"
            android:id="@+id/textView12"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignStart="@+id/imageView3"
            android:visibility="visible"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Details"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView2"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_whole"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Details"
            android:id="@+id/button2"
            android:layout_alignBottom="@+id/button"
            android:layout_alignStart="@+id/imageView3"
            android:background="@drawable/button_whole"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

    </RelativeLayout>
</RelativeLayout>

